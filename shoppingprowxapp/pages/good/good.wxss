.good-container {
  width: 100%;
}

.good-container .good-img {
  width: 100%;
  height: 500rpx;
  padding: 5rpx 10rpx;
  box-sizing: border-box;
}
.good-container .good-img .img {
  width: 100%;
  height: 100%;
}

.good-container .infos {
  padding: 20rpx 0;
  margin-top: 50rpx;
}

.good-container .infos .info {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  margin: 20rpx 0 10rpx;
  font-size: 36rpx;
}

.good-container .infos .info .value {
  display: inline-block;
  width: 300rpx;
  border-bottom: 1rpx solid rgba(0,0,0,.3);
  text-align: center;
}
.good-container .infos .number .title{
  display: inline-block;
  height: 60rpx;
  line-height: 60rpx;
  vertical-align: top;
}
.good-container .infos .number .number {
  display: inline-block;
  width: 300rpx;
  height: 60rpx;
  box-shadow: 0 0 3rpx rgba(0,0,0,.3);
  border-radius: 10rpx;
  font-size: 28rpx;
}

.good-container .infos .buy {
  width: 250rpx;
  height: 80rpx;
  margin-top: 50rpx;
  font-weight: 400;
  font-size: 30rpx;
  color: #fff;
  background-color: #4491FC;
}
