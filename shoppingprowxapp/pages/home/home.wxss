page {
  background-color: #eee;
}
.header {
  position: relative;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  margin-top: 10rpx;
  box-sizing: border-box;
  background-color: #fff;
}
.header .user-icon {
  position: absolute;
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 36rpx;
  margin: 10rpx 20rpx;
  border-radius: 50%;
  text-align: center;
  box-sizing: border-box;
  border: 1rpx solid rgba(0,0,0,.3);
}
.header .user-icon .user-icon-img {
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
}

.header .user-icon .center-list {
  position: absolute;
  bottom: -220%;
  width: 200rpx;
  font-size: 28rpx;
  background-color: #fff;
  box-shadow: 0 0 3rpx rgba(0,0,0,.3);
  z-index: 99;
}

.header .title-box {
  width: 100%;
  height: 100%;
  text-align: center;
}

.header .title-box .user-tit {
  width: 100%;
  height: 100%;
}

.header .logout {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  width: 200rpx;
  height: 60rpx;
  line-height: 60rpx;
  border: none;
  padding: 0rpx;
  background-color: transparent;
  font-size: 24rpx;
  font-weight: 400;
}

.header .logout:hover {
  box-shadow: 0 0 3rpx rgba(0,0,0,.3);
}

.swiper-wrapper {
  overflow: hidden;
}
.swiper-wrapper .swiper-box {
  height: 400rpx;
  padding: 10rpx;
  background-color: #fff;
  overflow: hidden;
}
.swiper-wrapper .swiper-box .swiper-item-box {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
  overflow: hidden;
  box-shadow: 0 0 10px rgba(0,0,0,.3);
}

.swiper-wrapper .swiper-box .swiper-item-box .img {
      width:100%;
      height:100%;
}
.swiper-wrapper .swiper-box .swiper-item-box .tit {
  position: absolute;
  left: 0;
  bottom: 0rpx;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  padding-left: 20rpx;
  box-sizing: border-box;
  font-size: 30rpx;
  font-weight: 600;
  letter-spacing: 5rpx;
  background-image: linear-gradient(90deg, rgba(0,0,0,.1), rgba(0,0,0,.3));
}

.recommend {
  height: 400rpx;
  margin: 40rpx 20rpx 0;
  box-sizing: border-box;
  border-radius: 10rpx;
  box-shadow: 0 0 10rpx rgba(0,0,0,.3);
  background-color: #fff;
}

.recommend .recommend-tit {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  padding: 5rpx 20rpx;
  margin-bottom: 20rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid rgba(0,0,0,.3);
  font-size: 26rpx;
  letter-spacing: 2rpx;
}

.recommend .recommend-body,
.recommend .recommend-body .recommend-body-item {
  width: 95%;
  height: 300rpx;
  margin: 0 auto;
  box-shadow: 0 0 10rpx rgba(0,0,0,.1);
}

.recommend .recommend-body .recommend-body-item .recommend-item-img {
  display: block;
  width: 100%;
  height: 300rpx;
}

.navigate-box {
  width: 100%;
  font-size: 28rpx;
  margin-top: 20rpx;
  overflow: hidden;
  background-color: #fff;
}

.navigate-box .navigate-tit {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 20rpx;
  border-bottom: 1rpx solid rgba(0,0,0,.3);
  background-color: #fff;
}

.navigate-box .navigate-body .navigate-item {
  width: 100%;
  min-height: 140rpx;
  border-bottom: 1rpx solid rgba(0,0,0,.1);
}

.navigate-box .navigate-body .navigate-item .tit {
  width: 100%;
  height: 140rpx;
  line-height: 140rpx;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
  text-align: center;
  font-size: 36rpx;
  letter-spacing: 5rpx;
  background-color: #fff;
}

.navigate-box .navigate-body .navigate-item .lists {
  width: 100%;
  /* height: 0rpx; */
  overflow: hidden;
  background-color: #eee;
  transition: all .3s;
}

.navigate-box .navigate-body .navigate-item .lists .list-item {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
  text-align: center;
}